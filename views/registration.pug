include header

.container

    h1 Registration
    if error
        p(style="color:red")= error

    form(method="POST" action="/auth/registration")
        div
            input(type="text" name="email" placeholder="Email користувача" required)
        div
            input(type="text" name="username" placeholder="Iм'я користувача" required)
        div
            input(type="password" name="password" placeholder="Пароль" required)
        div
            label
                input(type="radio" name="role" value="admin")
                | Admin
            label
                input(type="radio" name="role" value="staff")
                | Staff
            label
                input(type="radio" name="role" value="manager")
                | Manager
            label
                input(type="radio" name="role" value="viewer" checked)
                | Viewer
        div
            button(type="submit") Send
